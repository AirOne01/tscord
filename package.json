  },
  "dependencies": {
    "@discordx/importer": "^1.1.9",
    "@discordx/utilities": "^4.2.5",
    "discord-api-types": "^0.30.0",
    "discord.js": "^13.7.0",
    "discordx": "^9.6.0",
    "dotenv": "^16.0.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/node": "^17.0.33",
    "nodemon": "^2.0.16",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
